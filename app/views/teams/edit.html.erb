<%= form_for(@team, url: {action: "update"}) do |f| %>
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" >
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "Update"%>

<% end %>

</form>